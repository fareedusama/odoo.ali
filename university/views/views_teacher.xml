<odoo>
  <data>
    <record id="teacher_form" model="ir.ui.view">
      <field name="name">Teacher</field>
      <field name="model">university.teacher</field>
      <field name="arch" type="xml">
        <form>
           <header>

              <button name="student" string="Student" type="object" />
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
          <sheet>
            <div class="oe_button_box" name="button_box">

            <div><button name="sale" string="Sale" type="object" icon="fa-book"/>
            </div>
            </div>
            <group>
            <group>
              <field name="name"/>
              <field name="department_code"/>
              <field name="unique_id"/>
              <field name="code"  attrs="{'invisible': [('in_active', '=', False)]}"/>
              <field name="in_active"/>
            </group>
            <group>



              <field name="department_id"/>
              <field name="domain"/>
              <field name="sequance"/>
              <field name="department_ids" widget="many2many_tags"/>
              <field name="category_id"/>
              <field name="product_id"/>
            </group>
          </group>
            <notebook>
            <page name="department" string="department">

            </page>
            </notebook>



          </sheet>

        </form>


      </field>
    </record>


    <record id="teacher_tree" model="ir.ui.view">
      <field name="name">Teacher</field>
      <field name="model">university.teacher</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="domain" optional="hide"/>
          <field name="code"/>
          <field name="department_id" optional="show"/>
          <field name="sequance"/>
          <field name="department_ids"/>

        </tree>
      </field>
    </record>



      <record id="teacher_action" model="ir.actions.act_window">
              <field name="name">Teacher</field>
              <field name="type">ir.actions.act_window</field>
              <field name="res_model">university.teacher</field>
              <field name="view_mode">tree,form</field>
      </record>

      <menuitem id="university" name="University"/>
      <menuitem id="teacher" name="teacher" parent="university" action="teacher_action"/>



  </data>
</odoo>